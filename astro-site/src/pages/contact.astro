---
import Layout from "../layouts/Layout.astro";
import Toast from "../components/Toast.astro";
---

<Layout title="Contact">
    <main class="min-h-screen bg-gray-950 text-white py-20 px-6">
        <div class="max-w-3xl mx-auto">
            <!-- Page Title -->
            <div class="text-center mb-16">
                <p
                    class="text-teal-400 text-sm font-medium uppercase tracking-widest mb-2"
                >
                    Get In Touch
                </p>
                <h1 class="text-4xl font-bold text-white">Contact</h1>
                <p class="text-gray-400 mt-3 text-sm">
                    Feel free to reach out for opportunities or just to say hi
                </p>
            </div>

            <!-- Contact Info -->
            <div class="flex flex-wrap justify-center gap-6 mb-12">
                <a
                    href="mailto:kaveer@kabirpanthy.com.np"
                    class="flex items-center
                gap-3 px-5 py-3 rounded-xl bg-white/5 border border-white/10
                hover:bg-white/10 transition-colors"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-teal-400"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        ></path>
                    </svg>
                    <span class="text-sm text-gray-300"
                        >kaveer@kabirpanthy.com.np</span
                    >
                </a>

                <a
                    href="https://www.linkedin.com/in/kabir-raj-panthy/"
                    target="_blank"
                    class="flex items-center gap-3 px-5 py-3
                rounded-xl bg-white/5 border border-white/10 hover:bg-white/10
                transition-colors"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-teal-400"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                        ></path>
                    </svg>
                    <span class="text-sm text-gray-300">LinkedIn</span>
                </a>

                <a
                    href="https://github.com/kaveerpanthi"
                    target="_blank"
                    class="flex items-center gap-3 px-5 py-3 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 transition-colors"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-teal-400"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                        ></path>
                    </svg>
                    <span class="text-sm text-gray-300">GitHub</span>
                </a>
            </div>

            <!-- Contact Form -->
            <form
                id="contact-form"
                action="https://formspree.io/f/meeojkoy"
                method="POST"
                class="flex flex-col gap-4 bg-white/5 border border-white/10 rounded-2xl p-8"
            >
                <div class="flex flex-col md:flex-row gap-4">
                    <input
                        type="text"
                        name="name"
                        placeholder="Your Name"
                        required
                        class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-sm text-white placeholder-gray-500 focus:outline-none focus:border-teal-500 transition-colors"
                    />
                    <input
                        type="text"
                        name="subject"
                        placeholder="Subject"
                        required
                        class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-sm text-white placeholder-gray-500 focus:outline-none focus:border-teal-500 transition-colors"
                    />
                </div>
                <input
                    type="email"
                    name="email"
                    placeholder="Your Email"
                    required
                    class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-sm text-white placeholder-gray-500 focus:outline-none focus:border-teal-500 transition-colors"
                />
                <textarea
                    name="message"
                    placeholder="Message"
                    rows="5"
                    required
                    class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-sm text-white placeholder-gray-500 focus:outline-none focus:border-teal-500 transition-colors resize-none"
                ></textarea>
                <button
                    type="submit"
                    class="w-full py-3 bg-teal-500 hover:bg-teal-400 text-white font-semibold rounded-xl transition-colors text-sm"
                >
                    Send Message
                </button>
            </form>

            <Toast id="submission-toast" />

            <script type="module">
                import { showToast } from "/js/notifications.js";

                const form = document.getElementById("contact-form");

                form?.addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const submitBtn = form.querySelector(
                        'button[type="submit"]',
                    );
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.classList.add("opacity-70");
                    }

                    const data = new FormData(form);

                    try {
                        const res = await fetch(form.action, {
                            method: "POST",
                            body: data,
                            headers: { Accept: "application/json" },
                        });

                        if (res.ok) {
                            showToast(
                                "submission-toast",
                                "Thanks â€” I received your message and will get back to you soon.",
                                4000,
                                "success",
                            );
                            form.reset();
                        } else {
                            const json = await res.json().catch(() => null);
                            const errMsg =
                                json && json.error
                                    ? json.error
                                    : "Failed to send. Please try again.";
                            showToast(
                                "submission-toast",
                                errMsg,
                                4000,
                                "error",
                            );
                        }
                    } catch (err) {
                        showToast(
                            "submission-toast",
                            "Network error. Please try again.",
                        );
                    } finally {
                        if (submitBtn) {
                            submitBtn.disabled = false;
                            submitBtn.classList.remove("opacity-70");
                        }
                    }
                });
            </script>
        </div>
    </main>
</Layout>
