---
import Layout from "../layouts/Layout.astro";

const skills = [
    {
        category: "Testing & QA",
        items: [
            { name: "Manual Testing", level: 90 },
            { name: "API Testing (Postman)", level: 85 },
            { name: "Playwright Automation", level: 80 },
            { name: "CI/CD Integration", level: 75 },
        ],
    },
    {
        category: "Programming",
        items: [
            { name: "Python", level: 75 },
            { name: "JavaScript", level: 60 },
            { name: "SQL", level: 75 },
            { name: "PHP", level: 55 },
        ],
    },
    {
        category: "Web & Tools",
        items: [
            { name: "HTML/CSS", level: 80 },
            { name: "Git & GitHub", level: 80 },
            { name: "Jira", level: 85 },
            { name: "Documentation", level: 80 },
        ],
    },
];
---

<Layout title="Skills">
    <main
        class="min-h-screen text-white py-20 px-6"
        style="background: linear-gradient(135deg, #0f766e, #0d9488, #14b8a6)"
    >
        <div class="max-w-3xl mx-auto">
            <!-- Page Title -->
            <div class="text-center mb-16">
                <p
                    class="text-teal-200 text-sm font-medium uppercase tracking-widest mb-2"
                >
                    What I Know
                </p>
                <h1 class="text-4xl font-bold text-white">Skills</h1>
                <p class="text-white/70 mt-3 text-sm">
                    Confidence levels based on hands-on experience
                </p>
            </div>

            <!-- Skill Groups -->
            <div class="flex flex-col gap-12">
                {
                    skills.map((group) => (
                        <section>
                            <h2 class="text-white text-xs font-bold uppercase tracking-widest mb-6 border-b border-white/20 pb-3">
                                {group.category}
                            </h2>
                            <div class="flex flex-col gap-5">
                                {group.items.map((skill) => (
                                    <div>
                                        <div class="flex justify-between mb-1.5">
                                            <span class="text-sm text-white font-medium">
                                                {skill.name}
                                            </span>
                                            <span class="text-sm text-white font-medium">
                                                {skill.level}%
                                            </span>
                                        </div>
                                        <div class="w-full bg-white/10 rounded-full h-2">
                                            <div
                                                class="h-2 rounded-full"
                                                style={`width: ${skill.level}%; background: linear-gradient(to right, #facc15, #fb923c)`}
                                            />
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </section>
                    ))
                }
            </div>
        </div>
    </main>
</Layout>
